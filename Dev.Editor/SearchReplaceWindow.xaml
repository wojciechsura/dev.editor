<Window x:Class="Dev.Editor.SearchReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dev.Editor"
        xmlns:vm="clr-namespace:Dev.Editor.BusinessLogic.ViewModels.Search.SearchOperations;assembly=Dev.Editor.BusinessLogic"
        xmlns:p="clr-namespace:Dev.Editor.Properties"
        mc:Ignorable="d"
        Title="SearchReplaceWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Closing="HandleWindowClosing">
    <TabControl Margin="10" ItemsSource="{Binding SearchOperations}" SelectedItem="{Binding CurrentOperation}">
        <TabControl.ItemContainerStyle>
            <Style TargetType="TabItem">
                <Setter Property="Header" Value="{Binding Title}" />
            </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.Resources>
            <ResourceDictionary>
                
                <!-- Search template -->
                
                <DataTemplate DataType="{x:Type vm:SearchOperationViewModel}">
                    <GroupBox Header="{x:Static p:Resources.SearchWindow_Search}" Padding="4">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="{x:Static p:Resources.SearchWindow_SearchedText}" Margin="0,0,10,0"/>
                                    <TextBox Width="250" />
                                </StackPanel>
                                <GroupBox Header="{x:Static p:Resources.SearchWindow_SearchOptions}" Padding="4">
                                    <StackPanel Orientation="Vertical">
                                        <CheckBox Content="{x:Static p:Resources.SearchWindow_CaseSensitive}" />
                                        <CheckBox Content="{x:Static p:Resources.SearchWindow_OnlyFullWords}" />
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Header="{x:Static p:Resources.SearchWindow_SearchMode}" Padding="4">
                                    <StackPanel Orientation="Vertical">
                                        <RadioButton Content="{x:Static p:Resources.SearchWindow_SearchModeNormal}"/>
                                        <RadioButton Content="{x:Static p:Resources.SearchWindow_SearchModeExtended}"/>
                                        <RadioButton Content="{x:Static p:Resources.SearchWindow_SearchModeRegex}" />
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                <Button Content="{x:Static p:Resources.SearchWindow_FindNext}" Width="150" Margin="0,0,0,4" />
                                <Button Content="{x:Static p:Resources.SearchWindow_Close}" Width="150"></Button>
                            </StackPanel>                                        
                        </StackPanel>
                    </GroupBox>
                </DataTemplate>
                
                <!-- Replace template -->
                
                <DataTemplate DataType="{x:Type vm:ReplaceOperationViewModel}">
                    <GroupBox Header="{x:Static p:Resources.SearchWindow_Replace}" Padding="4">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="{x:Static p:Resources.SearchWindow_SearchedText}" Margin="0,0,10,0"/>
                                    <TextBox Width="250" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="{x:Static p:Resources.SearchWindow_ReplaceWith}" Margin="0,0,10,0"/>
                                    <TextBox Width="250" />
                                </StackPanel>
                                <GroupBox Header="{x:Static p:Resources.SearchWindow_SearchOptions}" Padding="4">
                                    <StackPanel Orientation="Vertical">
                                        <CheckBox Content="{x:Static p:Resources.SearchWindow_CaseSensitive}" />
                                        <CheckBox Content="{x:Static p:Resources.SearchWindow_OnlyFullWords}" />
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Header="{x:Static p:Resources.SearchWindow_SearchMode}" Padding="4">
                                    <StackPanel Orientation="Vertical">
                                        <RadioButton Content="{x:Static p:Resources.SearchWindow_SearchModeNormal}"/>
                                        <RadioButton Content="{x:Static p:Resources.SearchWindow_SearchModeExtended}"/>
                                        <RadioButton Content="{x:Static p:Resources.SearchWindow_SearchModeRegex}" />
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                                <Button Content="{x:Static p:Resources.SearchWindow_FindNext}" Width="150" Margin="0,0,0,4" />
                                <Button Content="{x:Static p:Resources.SearchWindow_Close}" Width="150"></Button>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </DataTemplate>
            </ResourceDictionary>
        </TabControl.Resources>
    </TabControl>
</Window>
