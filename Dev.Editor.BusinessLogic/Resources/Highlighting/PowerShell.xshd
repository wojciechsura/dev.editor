<?xml version="1.0"?>
<SyntaxDefinition name="PowerShell" extensions=".ps1;.psm1;.psd1" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
  
  <!-- Colors -->
  
	<Color name="Comment" foreground="#008000" />
	<Color name="String" foreground="#a31515" />
	<Color name="Char" foreground="#a31515" />
	<Color name="Keywords" foreground="#3400ff" />
  <Color name="FlowControlKeywords" foreground="#8f08c4" />
  <Color name="Variable" foreground="#37b9ff" />
	<Color name="Command" foreground="#000080" />
	<Color name="Operators" foreground="#8515EA" />

  <!-- Rules -->
  
	<RuleSet ignoreCase="true">
		<Span color="Comment">
			<Begin>\#</Begin>
		</Span>

		<Span color="Comment" multiline="true">
			<Begin>&lt;\#</Begin>
			<End>\#&gt;</End>
		</Span>

		<Span color="String">
			<Begin>"</Begin>
			<End>"</End>
			<RuleSet>
				<!-- span for escape sequences -->
				<Span begin="\\" end="."/>
			</RuleSet>
		</Span>

		<Span color="Char">
			<Begin>'</Begin>
			<End>'</End>
			<RuleSet>
				<!-- span for escape sequences -->
				<Span begin="\\" end="."/>
			</RuleSet>
		</Span>

		<Span color="String" multiline="true">
			<Begin color="String">@"</Begin>
			<End>"@</End>
			<RuleSet>
				<!-- span for escape sequences -->
				<Span begin='""' end=""/>
			</RuleSet>
		</Span>

		<Keywords color="Keywords">
      <Word>param</Word>
      <Word>end</Word>
      <Word>define</Word>
      <Word>from</Word>
      <Word>var</Word>
      <Word>dynamicparam</Word>
      <Word>filter</Word>
      <Word>dp</Word>
      <Word>process</Word>
      <Word>begin</Word>
      <Word>in</Word>
			<Word>data</Word>
			<Word>class</Word>
			<Word>using</Word>
			<Word>function</Word>
		</Keywords>

		<Keywords color="FlowControlKeywords">
      <Word>while</Word>
      <Word>else</Word>
      <Word>foreach</Word>
      <Word>until</Word>
      <Word>for</Word>
      <Word>switch</Word>
      <Word>exit</Word>
      <Word>elseif</Word>
      <Word>if</Word>

      <Word>break</Word>
      <Word>continue</Word>
      <Word>return</Word>

      <Word>catch</Word>
			<Word>finally</Word>
			<Word>throw</Word>
			<Word>trap</Word>
			<Word>try</Word>
		</Keywords>

		<Keywords color="Operators">
			<Word>-not</Word>
			<Word>-band</Word>
			<Word>-bor</Word>
			<Word>-replace</Word>
			<Word>-ireplace</Word>
			<Word>-creplace</Word>
			<Word>-and</Word>
			<Word>-or</Word>
			<Word>-is</Word>
			<Word>-isnot</Word>
			<Word>-as</Word>
			<Word>-lt</Word>
			<Word>-le</Word>
			<Word>-gt</Word>
			<Word>-ge</Word>
			<Word>-eq</Word>
			<Word>-ne</Word>
			<Word>-contains</Word>
			<Word>-notcontains</Word>
			<Word>-like</Word>
			<Word>-notlike</Word>
			<Word>-match</Word>
			<Word>-notmatch</Word>
		</Keywords>

		<Rule color="Variable">
			\$[\d\w_]+
		</Rule>

		<Rule color="Command">
		[\w]+-[\w]+
		</Rule>

  </RuleSet>
</SyntaxDefinition>
